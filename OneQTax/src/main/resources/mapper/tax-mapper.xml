<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.oneqtax.tax.repository.TaxMapper">

<!--    parameterType="com.spring.oneqtax.tax.domain.TaxInfoVO"-->

        <select id="getAllTaxInfo" resultType="com.spring.oneqtax.tax.domain.TaxInfoVO">
            SELECT *
            FROM deduction_calc
        </select>

        <select id="getTaxInfoByMemberId" resultType="com.spring.oneqtax.tax.domain.TaxInfoVO">
            SELECT *
            FROM deduction_calc
            WHERE member_id = #{member_id}
        </select>

        <select id="getTransactionByMemberId" resultType="com.spring.oneqtax.tax.domain.TransactionVO">
            SELECT *
            FROM total_amount
            WHERE member_id = #{member_id}
        </select>

        <select id="insertDeductionResult" parameterType="com.spring.oneqtax.tax.domain.DeductionResultVO">
            INSERT INTO deduction_result (deduction_id, calculation_id, credit_deductible, credit_deduction, debit_deductible,
                                          debit_deduction, cash_deductible, cash_deduction, basic_deduction, additional_deduction, reducing_tax)
            VALUES
        </select>

</mapper>